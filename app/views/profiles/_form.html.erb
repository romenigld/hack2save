<%= form_for @profile, url: user_profile_path do |f| %>
<div class="input-field">
  <%= f.label :name %>  <br />
  <%= f.text_field :name, autofocus: true %>
</div>
<div class="input-field">
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name %>
</div>
<div class="input-field">
  <%= f.label :job_title %><br />
  <%= f.text_field :job_title %>
</div>
<div class="field">
  <%= f.label :social_entity %><br />
  <%= f.select :social_entity, Profile.social_entities.keys %>
</div>
<div class="input-field">
  <%= f.label :phone_number %><br />
  <%= f.text_field :phone_number %>
</div>
<div class="input-field">
  <%= f.label :contact_email %><br />
  <%= f.text_field :contact_email %>
</div>
<div class="input-field">
  <%= f.label :description %><br />
  <%= f.text_area :description, class: "materialize-textarea" %>
</div>
<div class="#">
  <div class="file-field input-field gallery_picture">
    <div class="btn">
      <span>Upload file</span>
      <%= f.file_field :avatar%>
    </div>
    <input class="file-path validate" type="text"/>
  </div>
</div>
<div class="input-field">
  <%= f.submit "Update Profile", class: 'btn-large waves-effect waves-light' %>
</div>
<% end %>
